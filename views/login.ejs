    <h4 class="center-align">Ingresa a Menjar</h4>
    <div class="row">
        <!-- Red social -->
        <div class="col s6 offset-s2 offset-m2 m4 rect_marg z-depth-2">
            <h5>Ingresa usando una red social</h5>
            <!-- Facebook -->
            <div class="btn blue darken-4 btn_social waves-effect waves-light">
                <span class="social_txt">Facebook</span>
            </div>

